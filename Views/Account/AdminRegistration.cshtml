@model IMS_IMS_MODEL.RegisterModel

@{
    Layout = "~/Views/Shared/_LayoutAdminLte.cshtml";
    // Layout = null;
}

@{
    ViewBag.Title = "AdminRegistration";
}

<script src="~/Scripts/toastr.min.js"></script>
<link href="~/Content/toastr.css" rel="stylesheet" />
