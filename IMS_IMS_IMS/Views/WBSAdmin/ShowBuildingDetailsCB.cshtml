@*@{

        Layout = "~/Views/Shared/_LayoutAdminLteWater.cshtml";

    }*@

<div class=" col-md-6 offset-md-4">
    @Html.ActionLink(" Download XLSX File", "ExportSpeardSheetBuilding", "WBSAdmin", null, new { @style = "text-transform:capitalize;", @class = "btn btn-success btn-lg  fa fa-file-excel-o large pull-right" })
    <h6 id="ItemName" style="color:Highlight;font-weight:900"><span style="color:Highlight;font-weight:900">ITEM NAME :</span> @ViewBag.BuildingDetails</h6>
</div>
<div class="container-fluid" style="background-color:lightgrey">
    <table class="table table-bordered table-hover table-responsive table-striped" id="MyDataTableBuildingCB" style="width:100%; text-align:center;border:1px solid">
        <thead>
            <tr style="text-align:center">
                <th style="text-align:center">Item Serial</th>
                <th style="text-align:center">Location</th>
                <th style="text-align:center">Item Name</th>
                <th style="text-align:center">Building Name</th>
                <th style="text-align:center">Length</th>
                <th style="text-align:center">Width</th>
                <th style="text-align:center">Covered Area</th>
                <th style="text-align:center">Quantity</th>

                <th style="text-align:center">Description</th>
                <th style="text-align:center">User Name</th>
                <th style="text-align:center">Action</th>
                <th style="text-align:center">Action</th>


            </tr>
        </thead>
        <tbody></tbody>


    </table>
    <div style="text-align:center;display:none" id="loaderDiv">
        <img src="~/Content/images/circle-3.gif" width="70" />
    </div>
</div>

<script>

    $(document).ready(function () {


        $("#loaderDiv").show();
        ShowAssetDetailsBuildingCB();
         $("#MyDataTableBuildingCB").DataTable().clear();
        $("#MyDataTableBuildingCB").DataTable().destroy();

    });
    var responseData = '';
    var ShowAssetDetailsBuildingCB = function () {

        var location = "ChanduBudhera";
        //var location = window.localStorage.getItem('LocationStorage');
        var Loct = { location: location }
        var data = JSON.stringify(Loct);
        $.ajax({

            type: "POST",
            url: "/WBSAdmin/ShowBuildingDetailsCB",
            contentType: 'application/json; charset=utf-8',
            dataType: "json",
            data: data,
            success: function (response) {

                response = JSON.parse(BindDataTableBuildingCB(response));

                $("#MyDataTableBuildingCB").append(response)

            }
        });
    }

    var BindDataTableBuildingCB = function (response) {

        $("#MyDataTableBuildingCB").DataTable({

            "aaData": response,
            "aoColumns": [

                { "mData": "ItemCode" },
                { "mData": "Location" },
                { "mData": "ItemName" },
                { "mData": "BuildingName" },
                { "mData": "Length" },
                { "mData": "Width" },
                { "mData": "CoveredArea" },
                { "mData": "Quantity" },
                { "mData": "Description" },
                { "mData": "username" },
                {
                    "render": function (data, type, full, meta) {
                        return '<a  class="btn btn-block btn-primary" name="btnEdit" id="btnView" ><i class="fa fa-edit "></i></a>';

                    }
                },
                 {
                    "render": function (data, type, full, meta) {
                        return '<a class="btn btn-block btn-danger delete" name="btnDelete" id="btnDeleteUser" > <i class="fa fa-trash"></i></a>';

                    }
                }


            ]



        });


        $("#loaderDiv").hide();
    }


</script>

