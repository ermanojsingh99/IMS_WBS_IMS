<script>

    $.getJSON("/WBS/DDLItemType", function (data) {
        $.each(data, function (i, data) {      // bind the dropdown list using json result
            $('<option>',
                {
                    value: data.ItemType,
                    text: data.ItemType
                }).html(data.ItemType).appendTo("#ItemType1");
        });
    });
    //---------------------------------------------------------

    $.getJSON("/WBS/DDLStatus", function (data) {
        $.each(data, function (i, data) {      // bind the dropdown list using json result
            $('<option>',
                {
                    value: data.status,
                    text: data.status
                }).html(data.status).appendTo("#Status");
        });
    });
    //---------------------------------------------------------
</script>
<script>

    function OnSuccess(result) {

        console.log(result);
        if (result.message == "Asset Added Successfully") {

            toastr.success(result.message, "Message", { timeOut: 4000 });
            window.localStorage.removeItem("ItemNameStorage");
            window.localStorage.removeItem("LocationStorage");
            // document.getElementById("FormDetailSubmission").reset();
            // window.location.reload();
        }
        else if (result.result == false) {

            toastr.error("Somthing Wrong !!", "Error Message", { timeOut: 7000 });
        }
    }


    function OnFailure(result) {

        toastr.error("Something Went Wrong", "Error Message");


    }
    function OnComplete(result) {


        document.getElementById("FormCreateItem").reset();
        setTimeout(function () { location.reload(); }, 1000);

    }

</script>
