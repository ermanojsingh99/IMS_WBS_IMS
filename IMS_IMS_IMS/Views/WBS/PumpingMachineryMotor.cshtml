<script>

    $(document).ready(function () {


        $("#loaderDiv").show();
        ShowPumpingMotorDetails();
        $("#MyDataTablePumpingMotor").DataTable().clear();
        $("#MyDataTablePumpingMotor").DataTable().destroy();

    });
    var responseData = '';
    var ShowPumpingMotorDetails = function () {

        $.ajax({

            type: "POST",
            url: "/WBS/ShowPumpMotorDetails",
            success: function (response) {

                response = JSON.parse(BindDataTablePumpingMotor(response));

                $("#MyDataTablePumpingMotor").append(response)

            }
        });
    }

    var BindDataTablePumpingMotor = function (response) {

      

        $("#MyDataTablePumpingMotor").DataTable({

            "aaData": response,
            "aoColumns": [

                { "mData": "ItemCode" },
                //{ "mData": "ItemName" },
                //{ "mData": "Location" },
                { "mData": "BHP" },
                { "mData": "ItemType" },
                { "mData": "Make" },
                { "mData": "Quantity" },
                { "mData": "Status" },
                { "mData": "Description" }


            ]



        });


        $("#loaderDiv").hide();
    }


</script>


