<script>

    $(document).ready(function () {


        $("#loaderDiv").show();
        ShowLandDetails();
         $("#MyDataTableLand").DataTable().clear();
        $("#MyDataTableLand").DataTable().destroy();

    });
    var responseData = '';
    var ShowLandDetails = function () {

        $.ajax({

            type: "POST",
            url: "/WBS/ShowLandDetails",
            success: function (response) {

                response = JSON.parse(BindDataTableLand(response));

                $("#MyDataTableLand").append(response)

            }
        });
    }

    var BindDataTableLand = function (response) {

       

        $("#MyDataTableLand").DataTable({

            "aaData": response,
            "aoColumns": [

                { "mData": "ItemCode" },
                //{ "mData": "Location" },
                //{ "mData": "ItemName" },
                { "mData": "Length" },
                { "mData": "Width" },
                { "mData": "Area" },
                { "mData": "Quantity" },
                { "mData": "Description" }


            ]



        });


        $("#loaderDiv").hide();
    }


</script>


