<script>

    $(document).ready(function () {


        $("#loaderDiv").show();
        ShowBuildingDetails();
        $("#MyDataTableBuilding").DataTable().clear();
        $("#MyDataTableBuilding").DataTable().destroy();

    });
    var responseData = '';
    var ShowBuildingDetails = function () {

        $.ajax({

            type: "POST",
            url: "/WBS/ShowBuildingDetails",
            success: function (response) {

                response = JSON.parse(BindDataTableBuilding(response));

                $("#MyDataTableBuilding").append(response)

            }
        });
    }

    var BindDataTableBuilding = function (response) {


        $("#MyDataTableBuilding").DataTable({

            "aaData": response,
            "aoColumns": [

                { "mData": "ItemCode" },
                //{ "mData": "Location" },
                //{ "mData": "ItemName" },
                { "mData": "BuildingName" },
                { "mData": "Length" },
                { "mData": "Width" },
                { "mData": "CoveredArea" },
                { "mData": "Quantity" },
                { "mData": "Description" }



            ]



        });


        $("#loaderDiv").hide();
    }


</script>


<script>

   $(document).ready(function () {

