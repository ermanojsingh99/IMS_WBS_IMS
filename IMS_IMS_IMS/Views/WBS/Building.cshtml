                    @Html.EditorFor(model => model.Length, new { htmlAttributes = new { @class = "form-control txtLengthBuilding", placeholder = "Length (in Meter)", @id = "LengthBuilding" } })
                    @*@Html.DropDownListFor(model => model.Length, Enumerable.Empty<SelectListItem>(), "--Select Category--", new { @class = "form-control", @id = "Category1" })*@
                    @Html.ValidationMessageFor(model => model.Length, "", new { @class = "text-danger" })

